<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">  
    <title>QR Code Scanner or Reader</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Font Awesome CDN Link for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
  </head>

  <style>
body {
  background-color: #f2f2f2;
}

.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.content {
  background-color: #fff;
  padding: 2rem;
  border-radius: 10px;
  box-shadow: 0px 0px 10px #bbb;
  text-align: center;
}

h1 {
  margin-bottom: 2rem;
}

.form-group {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 2rem;
}

.upload-btn {
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 5px;
  padding: 1rem;
  cursor: pointer;
  transition: all 0.3s;
}

.upload-btn:hover {
  background-color: #f2f2f2;
  border-color: #999;
}

.upload-btn i {
  margin-right: 0.5rem;
}

button[type="submit"] {
  background-color: #4caf50;
  color: #fff;
  border: none;
  border-radius: 5px;
  padding: 1rem;
  cursor: pointer;
  margin-left: 1rem;
  transition: all 0.3s;
}

button[type="submit"]:hover {
  background-color: #3e8e41;
}

.error-message{
    color: red;
    margin-top: 20px;
}

  </style>
  <body>
    <div class="container">
      <div class="content">
        <h1>QR Code Reader</h1>
        <form action="/" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <input type="file" name="image" id="image" onchange="updateFileName()" hidden>
            <label for="image" class="upload-btn">
              <i class="fas fa-cloud-upload-alt"></i>
              <span class="file-input-text">Choose QR Code Image</span>
            </label>
            <button type="submit">Submit</button>
          </div>

          <% if (error) { %>
            <div class="error-message">
              <%= error %>
            </div>
          <% } %>
        </form>
      </div>
    </div>
          
    <script>
      function updateFileName() {
        const input = document.querySelector("input[type='file']");
        const text = document.querySelector(".file-input-text");
        text.innerHTML = input.files[0].name;
      }
    </script>
</body>
</html>
